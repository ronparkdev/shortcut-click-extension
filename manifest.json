{
  "manifest_version": 3,
  "name": "Shortcut Click",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "contextMenus", "scripting"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_popup": "public/settings.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
